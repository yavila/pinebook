<div class="row">
  <div>
    <% flash.each do |type, msg| %>
      <% if type == "notice" %>
        <div class="alert alert-success alert-dismissible">
      <% elsif type == "alert" %>
        <div class="alert alert-danger alert-dismissible">
      <% else %>
        <div class='alert alert-<%= "#{type}" %> alert-dismissible'>
      <% end %>
      <ul>
        <li>
          <%= msg %>
        </li>
      </ul>
    <% end %>
  </div>
</div>